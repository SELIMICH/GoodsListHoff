<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.mainactivity.MainActivity">

    <TextView
        android:id="@+id/main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/go_to_screen_list_of_goods"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_go_to_screen_list_of_goods"
        android:textSize="18sp"
        android:background="@drawable/ic_background_of_btn_go_to_screen_list_of_goods"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>